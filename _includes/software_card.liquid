{% comment %}
Software card component with prominent technology badges
Usage: {% include software_card.liquid project=project %}
{% endcomment %}

{% assign project = include.project %}

<div class="software-card">
  <a href="{{ project.url }}" target="_blank" rel="noopener noreferrer" class="software-card-link">
    <div class="software-card-content">

      {%- comment -%} Repository icon, name, and role badge {%- endcomment -%}
      <div class="software-card-header">
        <div class="software-card-title-section">
          <svg
            aria-hidden="true"
            class="software-repo-icon"
            height="16"
            role="img"
            viewBox="0 0 12 16"
            width="12"
          >
            <path
              fill-rule="evenodd"
              d="M4 9H3V8h1v1zm0-3H3v1h1V6zm0-2H3v1h1V4zm0-2H3v1h1V2zm8-1v12c0 .55-.45 1-1 1H6v2l-1.5-1.5L3 16v-2H1c-.55 0-1-.45-1-1V1c0-.55.45-1 1-1h10c.55 0 1 .45 1 1zm-1 10H1v2h2v-1h3v1h5v-2zm0-10H2v9h9V1z"
            ></path>
          </svg>
          <h3 class="software-card-name">{{ project.name }}</h3>
        </div>
        <p class="software-card-role">{{ project.role }}</p>
      </div>

      {%- comment -%} Description {%- endcomment -%}
      <p class="software-card-description">{{ project.description }}</p>

      {%- comment -%} Languages/Packages at bottom {%- endcomment -%}
      {%- if project.languages and project.languages.size > 0 -%}
      <div class="software-card-languages">
        {%- for lang in project.languages -%}
          <span class="software-language-badge">
            <i class="{{ lang.icon }}" style="color: {{ lang.color }};"></i>
            <span class="software-language-name">{{ lang.name }}</span>
          </span>
        {%- endfor -%}
      </div>
      {%- endif -%}

    </div>
  </a>
</div>
